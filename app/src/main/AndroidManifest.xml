<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required Internet permission for Firebase and other network usage -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetCareApp"
        tools:targetApi="31">

        <!-- Activity declarations -->
        <activity
            android:name=".Book_AppointmnetActivity"
            android:exported="false" />
        <activity
            android:name=".Clinic_ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Clinice_ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Clinic_SelectionActivity"
            android:exported="false" />
        <activity
            android:name=".AppoinmentActivity"
            android:exported="false" />
        <activity
            android:name=".DashboardActivity"
            android:exported="false" />
        <activity
            android:name=".SignInActivity2"
            android:exported="false" />
        <activity
            android:name=".SignInActivity"
            android:exported="false" />
        <activity
            android:name=".LogInActivity"
            android:exported="false" />

        <!-- Main Activity (Launcher activity) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
