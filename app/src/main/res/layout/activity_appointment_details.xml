<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#604CC3"
    tools:ignore="ExtraText"
    tools:context=".appointment_detailsActivity">

    <!-- Left Arrow Image -->
    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/back"
        android:src="@drawable/left_arrow_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="276dp"
        android:layout_height="63dp"
        android:layout_margin="16dp"
        android:background="@drawable/blue_rectangle"
        android:rotation="6.07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <View
        android:layout_width="276dp"
        android:layout_height="63dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_rectangle"
        android:rotation="-4.48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/crimson_text_semibold"
        android:gravity="center"
        android:text="Appointment Details"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="580dp"
        android:background="@drawable/rectangle_with_border"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="140dp">


        <TextView
            android:id="@+id/textView48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/crimson_text_semibold"
            android:gravity="center"
            android:text="Status"
            android:textColor="#000000"
            android:textSize="26sp"
            android:layout_gravity="start"
            android:paddingStart="20dp"
            />

        <EditText
            android:layout_width="320dp"
            android:layout_height="35dp"
            android:layout_gravity="start"
            android:layout_marginTop="60dp"
            android:layout_marginStart="20dp"
            android:autofillHints=""
            android:background="@drawable/round_background4"
            android:fontFamily="@font/crimson_text_semibold"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/crimson_text_semibold"
            android:gravity="center"
            android:text="Pet Name"
            android:textColor="#000000"
            android:textSize="26sp"
            android:layout_gravity="start"
            android:paddingStart="20dp"/>

        <EditText
            android:layout_width="320dp"
            android:layout_height="35dp"
            android:layout_gravity="start"
            android:layout_marginTop="150dp"
            android:layout_marginStart="20dp"
            android:autofillHints=""
            android:background="@drawable/round_background4"
            android:fontFamily="@font/crimson_text_semibold"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/crimson_text_semibold"
            android:gravity="center"
            android:text="Care Service"
            android:textColor="#000000"
            android:textSize="26sp"
            android:layout_gravity="start"
            android:paddingStart="20dp"/>

        <EditText
            android:layout_width="320dp"
            android:layout_height="35dp"
            android:layout_gravity="start"
            android:layout_marginTop="240dp"
            android:layout_marginStart="20dp"
            android:autofillHints=""
            android:background="@drawable/round_background4"
            android:fontFamily="@font/crimson_text_semibold"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView59"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/crimson_text_semibold"
            android:gravity="center"
            android:text="Type of Vaccine"
            android:textColor="#000000"
            android:textSize="26sp"
            android:layout_gravity="start"
            android:paddingStart="20dp"/>

        <EditText
            android:layout_width="320dp"
            android:layout_height="35dp"
            android:layout_gravity="start"
            android:layout_marginTop="330dp"
            android:layout_marginStart="20dp"
            android:autofillHints=""
            android:background="@drawable/round_background4"
            android:fontFamily="@font/crimson_text_semibold"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/crimson_text_semibold"
            android:gravity="center"
            android:text="Reason fot Appointment"
            android:textColor="#000000"
            android:textSize="26sp"
            android:layout_gravity="start"
            android:paddingStart="20dp"/>

        <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginTop="420dp"
            android:layout_marginStart="20dp"
            android:autofillHints=""
            android:background="@drawable/round_background4"
            android:fontFamily="@font/crimson_text_semibold"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="470dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/crimson_text_semibold"
            android:gravity="center"
            android:text="Date"
            android:textColor="#000000"
            android:textSize="26sp"
            android:layout_gravity="start"
            android:paddingStart="20dp"/>

        <EditText
            android:layout_width="320dp"
            android:layout_height="36dp"
            android:layout_gravity="start"
            android:layout_marginTop="505dp"
            android:layout_marginStart="20dp"
            android:autofillHints=""
            android:background="@drawable/round_background4"
            android:fontFamily="@font/crimson_text_semibold"
            android:gravity="center"
            android:inputType="date"
            android:hint="MM/DD/YYYY-HH:MM"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </FrameLayout>

    <Button
        android:id="@+id/button21"
        android:layout_width="333dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/crimson_text_bold"
        android:text="Update"
        android:textColor="#ffff"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="734dp" />

    <Button
        android:id="@+id/button22"
        android:layout_width="333dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_background5"
        android:fontFamily="@font/crimson_text_bold"
        android:text="Cancel Appointment"
        android:textColor="#000000"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="809dp" />
</androidx.constraintlayout.widget.ConstraintLayout>