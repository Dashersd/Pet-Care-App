<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6E9"
    tools:context=".vet_dashActivity"
    tools:ignore="MissingConstraints">


    <TextView
        android:id="@+id/textView54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/crimson_text_bold"
        android:text="Dashboard"
        android:textColor="#000000"
        android:textSize="38sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="65dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_gravity="start"
        android:background="@drawable/et_violet"
        android:drawablePadding="10dp"
        android:fontFamily="@font/crimson_text_semibold"
        android:gravity="center"
        android:hint="Search Client Name"
        android:textColorHint="@color/gray"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="31dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="126dp" />

    <View
        android:id="@+id/view3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/vet_logo"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="324dp"
        tools:layout_editor_absoluteY="31dp" />

    <RelativeLayout
        android:id="@+id/view4"
        android:layout_width="369dp"
        android:layout_height="110dp"
        android:background="@drawable/violet_rectangle2"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="190dp">

        <!-- TextView 1 -->
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/crimson_text_semibold"
            android:text="Client Name"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <!-- TextView 2 -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/crimson_text_semibold"
            android:text="Pet Name"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- TextView 3 -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/crimson_text_semibold"
            android:text="Care Service"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Button 1 -->

        <!-- Button 2 -->
        <Button
            android:id="@+id/button_decline"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="90dp"
            android:background="@drawable/red_rectangle"
            android:drawableStart="@drawable/down_like"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/button_approve"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/green_rectangle"
            android:drawableStart="@drawable/down_like"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>