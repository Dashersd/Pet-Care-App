<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#604CC3"
    tools:ignore="ExtraText">

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="276dp"
        android:layout_height="63dp"
        android:layout_margin="16dp"
        android:background="@drawable/blue_rectangle"
        android:rotation="6.07"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="60dp" />

    <!-- ImageView for the cute cat -->

    <!-- Camera Icon at the bottom-right -->

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="276dp"
        android:layout_height="63dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_rectangle"
        android:rotation="-4.48"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="60dp" />

    <TextView
        android:id="@+id/textView46"
        app:layout_constraintBottom_toTopOf="@id/cuteCatImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/crimson_text_semibold"
        android:gravity="center"
        android:text="@string/pet_features"
        android:textColor="#FFFFFF"
        android:textSize="38sp"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="60dp" />

    <ImageView
        android:id="@+id/cuteCatImage"
        app:layout_constraintBottom_toTopOf="@id/cameraIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView46"
        android:layout_width="200dp"
        android:layout_height="195.24dp"
        android:contentDescription="Add image"
        android:src="@drawable/cute_cat"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="133dp" />

    <ImageView
        android:id="@+id/cameraIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginBottom="10dp"
        app:layout_constraintMarginEnd="10dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/baseline_add_a_photo_24"
        tools:layout_editor_absoluteX="239dp"
        tools:layout_editor_absoluteY="283dp" />

    <Button
        android:id="@+id/button21"
        android:layout_width="333dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/cat_footprint"
        android:drawablePadding="10dp"
        android:fontFamily="@font/crimson_text_bold"
        android:paddingStart="5dp"
        android:paddingEnd="31dp"
        android:text="Pet Details"
        android:textColor="#000000"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="348dp" />

    <Button
        android:id="@+id/button21"
        android:layout_width="333dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/microchip"
        android:drawablePadding="10dp"
        android:fontFamily="@font/crimson_text_bold"
        android:paddingStart="5dp"
        android:paddingEnd="31dp"
        android:text="Microchip"
        android:textColor="#000000"
        android:textSize="35sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="448dp" />

    <Button
        android:id="@+id/button21"
        android:layout_width="333dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/insurance"
        android:drawablePadding="10dp"
        android:fontFamily="@font/crimson_text_bold"
        android:paddingStart="5dp"
        android:paddingEnd="31dp"
        android:text="Insurance"
        android:textColor="#000000"
        android:textSize="35sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="548dp" />

    <Button
        android:id="@+id/button21"
        android:layout_width="333dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/license"
        android:drawablePadding="10dp"
        android:fontFamily="@font/crimson_text_bold"
        android:paddingStart="16dp"
        android:paddingEnd="35dp"
        android:text="License"
        android:textColor="#000000"
        android:textSize="35sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="647dp" />

    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Back"
        android:src="@drawable/left_arrow_white"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="-11dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
