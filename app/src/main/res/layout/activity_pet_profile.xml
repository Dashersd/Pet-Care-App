<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#604CC3"
    tools:ignore="ExtraText">
    tools:context=".pet_profileActivity">

    <View
        android:layout_width="276dp"
        android:layout_height="63dp"
        android:layout_margin="16dp"
        android:background="@drawable/blue_rectangle"
        android:rotation="6.07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <View
        android:layout_width="276dp"
        android:layout_height="63dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_rectangle"
        android:rotation="-4.48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/crimson_text_semibold"
        android:gravity="center"
        android:text="@string/pet_features"
        android:textColor="#FFFFFF"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Buttons -->
    <ImageView
        android:id="@+id/cuteCatImage"
        android:layout_width="200dp"
        android:layout_height="195.24dp"
        android:layout_marginTop="20dp"
        android:contentDescription="Add image"
        android:src="@drawable/cute_cat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView46" />

    <ImageView
        android:id="@+id/cameraIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/baseline_add_a_photo_24"
        tools:layout_editor_absoluteX="247dp"
        tools:layout_editor_absoluteY="280dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonPetDetails"
        android:layout_width="333dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/cat_footprint"
        android:drawablePadding="10dp"
        android:fontFamily="@font/crimson_text_bold"
        android:paddingStart="5dp"
        android:paddingEnd="31dp"
        android:text="Pet Details"
        android:textColor="#000000"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="348dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonMicrochip"
        android:layout_width="333dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/microchip"
        android:drawablePadding="10dp"
        android:fontFamily="@font/crimson_text_bold"
        android:paddingStart="5dp"
        android:paddingEnd="31dp"
        android:text="Microchip"
        android:textColor="#000000"
        android:textSize="35sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="448dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonInsurance"
        android:layout_width="333dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/insurance"
        android:drawablePadding="10dp"
        android:fontFamily="@font/crimson_text_bold"
        android:paddingStart="5dp"
        android:paddingEnd="29dp"
        android:text="Insurance"
        android:textColor="#000000"
        android:textSize="33sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="548dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonLicense"
        android:layout_width="333dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/License"
        android:drawablePadding="10dp"
        android:fontFamily="@font/crimson_text_bold"
        android:paddingStart="16dp"
        android:paddingEnd="35dp"
        android:text="License"
        android:textColor="#000000"
        android:textSize="35sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="647dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Back"
        android:src="@drawable/left_arrow_white"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="-11dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>