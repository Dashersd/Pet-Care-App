<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7EED3"
    tools:ignore="ExtraText"
    tools:context=".Schedule_vaccineActivity">

    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/back"
        android:src="@drawable/left_arrow_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


    <View
        android:layout_width="276dp"
        android:layout_height="63dp"
        android:layout_margin="16dp"
        android:background="@drawable/violet_rectangle"
        android:rotation="6.07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103" />

    <View
        android:layout_width="276dp"
        android:layout_height="63dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_rectangle"
        android:rotation="-4.48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/crimson_text_semibold"
        android:gravity="center"
        android:text="Vaccination Schedule"
        android:textColor="#FFFFFF"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOnce"
        android:layout_width="333dp"
        android:layout_height="110dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/once"
        android:drawablePadding="10dp"
        android:fontFamily="@font/crimson_text_bold"
        android:paddingStart="15dp"
        android:paddingEnd="31dp"
        android:text="Once"
        android:textColor="#000000"
        android:textSize="38sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="338dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonRepeat"
        android:layout_width="333dp"
        android:layout_height="110dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/repeat"
        android:drawablePadding="10dp"
        android:fontFamily="@font/crimson_text_bold"
        android:paddingStart="15dp"
        android:paddingEnd="31dp"
        android:text="Repeat"
        android:textColor="#000000"
        android:textSize="38sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="530dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>